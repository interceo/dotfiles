set $mod Mod4
set $alt Mod1
set $fileManager nemo

set $monitor1 "DP-2"
set $monitor2 "HDMI-A-1"

font pango:AestheticIosevka Nerd Font Mono 12

output $monitor1 resolution 3840x2160@160Hz scale 1.5
output $monitor2 resolution 2560x1440@144Hz scale 1

exec_always systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP MOZ_ENABLE_WAYLAND=1
exec_always dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP MOZ_ENABLE_WAYLAND=1

exec hyprpaper
exec waybar -c ~/.config/waybar/config.jsonc
exec firefox
exec discord
exec Telegram

input * {
    xkb_layout "us,ru"
    xkb_options "grp:win_space_toggle"
    xkb_numlock "enabled"
}

input type:mouse {
    accel_profile "flat"
#    pointer_accel 0
}


bindsym --to-code $mod+G exec ~/.config/sway/sway_toggle_scale.sh

# capture all screens to clipboard    
bindsym --to-code Print exec grim - | wl-copy
# capture the specified screen area to clipboard    
bindsym --to-code $mod+Shift+S exec grim -g "$(slurp)" - | wl-copy    
# capture the focused monitor to clipboard    
bindsym --to-code $mod+Print exec grim -o $(swaymsg -t get_outputs | jq -r '.[] | select(.focused) | .name') - | wl-copy

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym --to-code F11 exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym --to-code F12 exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym --to-code F10 exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym --to-code F1 exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym --to-code $mod+Return exec kitty 
bindsym --to-code $mod+Shift+q kill
bindsym --to-code $mod+x move scratchpad
bindsym --to-code $mod+Tab scratchpad show
bindsym --to-code $mod+E exec $fileManager

# start dmenu (a program launcher)
# bindsym --to-code $mod+d exec --no-startup-id rofi -show drun
bindsym --to-code $mod+d exec ~/.config/rofi/bin/launcher
bindsym --to-code $mod+q exec  ~/.config/rofi/bin/powermenu
bindsym --to-code $mod+Shift+d exec ~/.config/rofi/bin/launcher_root

# change focus
bindsym --to-code $mod+j focus left
bindsym --to-code $mod+k focus down
bindsym --to-code $mod+l focus up
bindsym --to-code $mod+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym --to-code $mod+Left focus left
bindsym --to-code $mod+Down focus down
bindsym --to-code $mod+Up focus up
bindsym --to-code $mod+Right focus right

# move focused window
bindsym --to-code $mod+Shift+j move left
bindsym --to-code $mod+Shift+k move down
bindsym --to-code $mod+Shift+l move up
bindsym --to-code $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym --to-code $mod+Shift+Left move left
bindsym --to-code $mod+Shift+Down move down
bindsym --to-code $mod+Shift+Up move up
bindsym --to-code $mod+Shift+Right move right

# split in horizontal orientation
bindsym --to-code $mod+h split h
# split in vertical orientation
bindsym --to-code $mod+v split v
# enter fullscreen mode for the focused container
bindsym --to-code $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym --to-code $mod+s layout stacking
# bindsym --to-code $mod+w layout tabbed
# bindsym --to-code $mod+e layout toggle split

# toggle tiling / floating
bindsym --to-code $alt+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym --to-code $alt+space focus mode_toggle
# focus the parent container
bindsym --to-code $mod+a focus parent


set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

workspace $ws1 output $monitor1
workspace $ws2 output $monitor2
workspace $ws3 output $monitor1
workspace $ws4 output $monitor2
workspace $ws5 output $monitor1
workspace $ws6 output $monitor2
workspace $ws7 output $monitor1
workspace $ws8 output $monitor2
workspace $ws9 output $monitor1
workspace $ws10 output $monitor2

# switch to workspace
bindsym --to-code $mod+1 workspace number $ws1
bindsym --to-code $mod+2 workspace number $ws2
bindsym --to-code $mod+3 workspace number $ws3
bindsym --to-code $mod+4 workspace number $ws4
bindsym --to-code $mod+5 workspace number $ws5
bindsym --to-code $mod+6 workspace number $ws6
bindsym --to-code $mod+7 workspace number $ws7
bindsym --to-code $mod+8 workspace number $ws8
bindsym --to-code $mod+9 workspace number $ws9
bindsym --to-code $mod+0 workspace number $ws10

# move focused container to workspace
bindsym --to-code $mod+Shift+1 move container to workspace number $ws1
bindsym --to-code $mod+Shift+2 move container to workspace number $ws2
bindsym --to-code $mod+Shift+3 move container to workspace number $ws3
bindsym --to-code $mod+Shift+4 move container to workspace number $ws4
bindsym --to-code $mod+Shift+5 move container to workspace number $ws5
bindsym --to-code $mod+Shift+6 move container to workspace number $ws6
bindsym --to-code $mod+Shift+7 move container to workspace number $ws7
bindsym --to-code $mod+Shift+8 move container to workspace number $ws8
bindsym --to-code $mod+Shift+9 move container to workspace number $ws9
bindsym --to-code $mod+Shift+0 move container to workspace number $ws10

bindsym --to-code $mod+Shift+c reload
bindsym --to-code $mod+Shift+r restart
bindsym --to-code $mod+Shift+e exec "swaynag -t warning \
        -m 'Привет. Ты действительно хочешь выйти из sway? Это завершит твою сессию Wayland.' \
        -b 'Suspend' 'systemctl suspend' \
        -b 'Lock' '$lock' \
        -b 'Shutdown' 'systemctl -i poweroff' \
        -b 'Reboot' 'systemctl -i reboot' \
        -b 'Yes, exit sway' 'swaymsg exit' \
        --button-background=#FF9100 \
        --button-border-size=3px \
        --border=#FCC99D \
        --text=#092E47 \
        --font=Hack Nerd Font Mono 16 \
        --background=#282828"

mode "resize" {
        bindsym --to-code j resize shrink width 10 px or 10 ppt
        bindsym --to-code k resize grow height 10 px or 10 ppt
        bindsym --to-code l resize shrink height 10 px or 10 ppt
        bindsym --to-code semicolon resize grow width 10 px or 10 ppt

        bindsym --to-code Left resize shrink width 10 px or 10 ppt
        bindsym --to-code Down resize grow height 10 px or 10 ppt
        bindsym --to-code Up resize shrink height 10 px or 10 ppt
        bindsym --to-code Right resize grow width 10 px or 10 ppt

        bindsym --to-code Return mode "default"
        bindsym --to-code Escape mode "default"
        bindsym --to-code $mod+r mode "default"
}

bindsym --to-code $mod+r mode "resize"

for_window [app_id="org.telegram.desktop"] floating enable
for_window [app_id="(yandex-music|spotify)"] {
    move scratchpad
    resize set 1124 600
    scratchpad show
}

